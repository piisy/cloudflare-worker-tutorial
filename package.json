{
  "name": "api.littleeleven.com",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "postinstall": "prisma generate",
    "start:local": "wrangler dev --port 12345",
    "start:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy -e production",
    "openapi": "run-s openapi:*",
    "openapi:generate": "curl http://localhost:12345/api/doc > ./openapi.json",
    "openapi:format": "node format-json.js",
    "drizzle:generate:sql": "drizzle-kit generate",
    "prisma:generate:sql": "prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script --output migrations/prisma-generated.sql",
		"prisma:migrations:sql": "prisma migrate diff --from-local-d1 --to-schema-datamodel ./prisma/schema.prisma --script --output migrations/prisma-migrations.sql",
    "login": "wrangler login",
    "d1:migrations:local": "wrangler d1 migrations apply littleeleven-dev --local",
    "d1:export:remote": "wrangler d1 export littleeleven --remote --output=./remote.sql",
    "tsc-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "unit:test": "vitest --run --exclude tests/**/*.e2e.spec.ts",
    "e2e:test": "vitest --e2e --run tests/**/*.e2e.spec.ts"
  },
  "dependencies": {
    "@hono/oauth-providers": "^0.6.2",
    "@hono/zod-openapi": "^0.16.4",
    "@prisma/adapter-d1": "^5.21.1",
    "@prisma/client": "^5.21.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.36.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.8",
    "minimatch": "^10.0.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@cloudflare/vitest-pool-workers": "^0.5.24",
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/jest": "^29.5.14",
    "drizzle-kit": "^0.27.1",
    "eslint": "^9.14.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.21.1",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.4",
    "wrangler": "^3.84.1"
  }
}
